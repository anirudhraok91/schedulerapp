<div class = "row">
    <div class="col-md-4 col-md-offset-4">
        <div class = "well">
        <%= form_for Lecture.new do |f| %>
           <div class = "form-group">
                <%= f.label :name %>
                <%= f.text_field :subject, class: "form-control" %>
            </div>
            
           <div class = "form-group">
                <%= f.label :day %>
                <%= f.email_field :day, class: "form-control" %>
            </div>
            
           <div class = "form-group">            
                <%= f.label :tutor %>
                <%= f.text_field :tutor, class: "form-control" %>
           </div>
           
           <%= f.submit 'Submit', class: "btn btn-default" %>
        <% end %>
        </div>
    </div>
    
</div>